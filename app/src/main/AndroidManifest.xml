<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Calendar permissions for meal planning -->
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodPlanner">
        
        <!-- Splash Screen - Entry Point -->
        <activity
            android:name=".presentation.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.FoodPlanner.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Authentication Activity -->
        <activity
            android:name=".presentation.auth.AuthActivity"
            android:exported="false" />
        
        <!-- Onboarding Activity -->
        <activity
            android:name=".presentation.onboarding.view.OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.FoodPlanner.Onboarding" />
        
        <!-- Main Home Activity -->
        <activity
            android:name=".presentation.home.view.MainActivity"
            android:exported="false" />
        
        <!-- Meal Details Activity -->
        <activity
            android:name=".presentation.mealdetails.MealDetailsActivity"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:parentActivityName=".presentation.home.view.MainActivity" />
        
        <!-- Meals List Activity (Filter by Category/Area/Ingredient) -->
        <activity
            android:name=".presentation.mealslist.view.MealsListActivity"
            android:exported="false"
            android:parentActivityName=".presentation.home.view.MainActivity" />
            
    </application>

</manifest>